rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de Ayuda (Helpers) ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getRequesterProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isStaff() {
      let role = getRequesterProfile().data.role;
      return isSignedIn() && (role == 'admin' || role == 'director' || role == 'teacher');
    }

    function isAdmin() {
      return isSignedIn() && getRequesterProfile().data.role == 'admin';
    }
    
    function isManager() {
        let role = getRequesterProfile().data.role;
        return isSignedIn() && (role == 'admin' || role == 'director');
    }

    function isTeacherOfCourse(courseId) {
      let courseDoc = get(/databases/$(database)/documents/courses/$(courseId));
      return isSignedIn() && courseDoc.data.teacherId == request.auth.uid;
    }

    // --- REGLAS PARA COLECCIONES EN LA RAÍZ ---
    match /subjects/{docId} {
      allow read: if isSignedIn();
      allow write: if isManager();
    }

    match /grades/{docId} {
      allow read: if isSignedIn();
      allow write: if isManager();
    }
    
    match /sections/{docId} {
      allow read: if isSignedIn();
      allow write: if isManager();
    }

    match /courses/{courseId} {
      allow read: if isSignedIn();
      allow write: if isManager();

      // Subcolección de estudiantes inscritos en un curso.
      match /students/{studentId} {
         // El profesor del curso, el staff directivo, o el propio estudiante pueden ver la inscripción.
         allow get, list: if isTeacherOfCourse(courseId) || isManager() || isOwner(studentId);
         // El profesor del curso o el staff directivo pueden inscribir, actualizar o desinscribir estudiantes.
         allow create, update, delete: if isTeacherOfCourse(courseId) || isManager();
      }
    }

    // --- REGLA PARA CONSULTA DE ESTUDIANTES (Collection Group) ---
    // Permite a un estudiante ver sus propias inscripciones en todos los cursos
    // y al staff ver cualquier inscripción.
    match /{path=**}/students/{studentDocId} {
        allow read: if (isSignedIn() && resource.data.studentId == request.auth.uid) || isStaff();
    }

    // --- REGLAS PARA LA COLECCIÓN DE USUARIOS ---
    match /users/{userId} {
      allow get: if isStaff() || isOwner(userId);
      allow list: if isStaff();
      allow create: if isOwner(userId) || isManager();
      allow update: if isOwner(userId) || isManager();
      allow delete: if isManager();

      // Subcolección para los cursos asignados a un profesor
      match /assignedCourses/{courseId} {
        // Un profesor puede leer sus propios cursos asignados, un manager puede leer los de cualquiera
        allow read: if isOwner(userId) || isManager();
        // Solo un manager puede asignar o desasignar cursos a un profesor
        allow create, delete: if isManager();
      }
    }
  }
}
