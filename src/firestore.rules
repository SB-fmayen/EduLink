rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de Ayuda (Helpers) ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getRequesterProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function getRole() {
      let role = getRequesterProfile().data.role;
      return role != null ? role : '';
    }

    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }
    
    // Un 'Manager' es un admin o un director. Tienen permisos de gestión académica.
    function isManager() {
      let role = getRole();
      return isSignedIn() && (role == 'admin' || role == 'director');
    }
    
    // Un 'Staff' es cualquier rol que no sea estudiante o padre. Usado para acceso de lectura extendido.
    function isStaff() {
      let role = getRole();
      return isSignedIn() && (role == 'admin' || role == 'director' || role == 'teacher');
    }

    function getCourse(courseId) {
      return get(/databases/$(database)/documents/courses/$(courseId));
    }

    function isTeacherOfCourse(courseId) {
      // Asegúrate de que courseDoc y courseDoc.data no sean nulos
      let courseDoc = getCourse(courseId);
      return isSignedIn() && courseDoc != null && courseDoc.data != null && courseDoc.data.teacherId == request.auth.uid;
    }
    
    // --- REGLAS PARA COLECCIONES EN LA RAÍZ ---
    match /subjects/{docId} {
      allow read: if isSignedIn();
      allow write: if isManager(); // Solo admins y directores
    }

    match /grades/{docId} {
      // CORRECCION: Cualquier staff puede leer y escribir. Solo admins pueden eliminar.
      allow read, write: if isStaff();
      allow delete: if isManager();
    }
    
    match /sections/{docId} {
      allow read: if isSignedIn();
      allow write: if isManager(); // Solo admins y directores
    }
    
    match /attendance/{recordId} {
      // El profesor del curso o un manager pueden crear y actualizar registros.
      allow write: if isManager() || isTeacherOfCourse(request.resource.data.courseId);
      // El estudiante puede leer su propio registro, el profesor del curso o un manager pueden leer cualquiera.
      allow get: if isManager() || isTeacherOfCourse(resource.data.courseId) || isOwner(resource.data.studentId);
      // Un profesor puede listar los registros de un curso del que es dueño. Un manager puede listar todo.
      allow list: if isManager() || (isTeacherOfCourse(request.query.courseId) && request.query.courseId != null);
    }

    match /courses/{courseId} {
      // CORRECCIÓN: Solo el personal puede leer los detalles de todos los cursos.
      allow read: if isStaff();
      allow write: if isManager(); // Solo admins y directores

      // Subcolección de estudiantes inscritos en un curso.
      match /students/{studentId} {
         // El staff, el profesor del curso, o el propio estudiante pueden ver la inscripción.
         allow read: if isManager() || isTeacherOfCourse(courseId) || isOwner(studentId);
         // El staff puede inscribir, actualizar o desinscribir estudiantes.
         allow write: if isStaff();
         // El staff puede eliminar inscripciones (parte del lote de eliminación de cursos)
         allow delete: if isStaff();
      }
      
      // Tareas como subcolección del curso
      match /tasks/{taskId} {
        allow read: if isStaff() || isStudentEnrolled(courseId); // Profesores, admins y estudiantes inscritos pueden leer tareas
        allow write: if isManager() || isTeacherOfCourse(courseId); // Solo el profesor del curso o admin pueden crear/editar
        allow delete: if isManager() || isTeacherOfCourse(courseId); // Solo el profesor del curso o admin pueden eliminar
        
        match /submissions/{submissionId} {
           allow read: if isManager() || isTeacherOfCourse(courseId) || isOwner(submissionId); // Profesor, admin o el propio estudiante pueden leer su entrega
           allow create: if isOwner(submissionId) && request.time < get(/databases/$(database)/documents/courses/$(courseId)/tasks/$(taskId)).data.dueDate.toTimestamp(); // El estudiante puede crear su entrega antes de la fecha límite.
           allow update: if isManager() || isTeacherOfCourse(courseId); // Solo el profesor o admin pueden calificar (actualizar)
        }
      }
    }

    // --- REGLA PARA CONSULTA DE ESTUDIANTES (Collection Group) ---
    // Permite a un estudiante ver sus propias inscripciones y al personal/profesor ver las de sus cursos.
    match /{path=**}/students/{studentDocId} {
        allow read: if (isSignedIn() && resource.data.studentId == request.auth.uid) 
                    || (isStaff() && isTeacherOfCourse(resource.data.courseId)) 
                    || isManager();
    }
    
    function isStudentEnrolled(courseId) {
      return exists(/databases/$(database)/documents/courses/$(courseId)/students/$(request.auth.uid));
    }


    // --- REGLAS PARA LA COLECCIÓN DE USUARIOS ---
    match /users/{userId} {
      // El personal (staff) puede ver perfiles, el usuario puede ver el suyo.
      allow get: if isStaff() || isOwner(userId);
      // Solo el personal (staff) puede listar usuarios (usado en las páginas de gestión).
      allow list: if isStaff();
      // Un usuario puede registrarse (crear su propio doc), o un manager puede crear otros.
      allow create: if isOwner(userId) || isManager();
      // Un usuario puede actualizar su perfil, o un manager puede actualizar el de otros.
      allow update: if isOwner(userId) || isManager();
      // Solo managers pueden eliminar usuarios.
      allow delete: if isManager();

      // Subcolección para los cursos asignados a un profesor
      match /assignedCourses/{courseId} {
        // CORRECCIÓN: El personal puede leer las asignaciones de cualquier profesor.
        allow read: if isStaff();
        // Solo un manager puede asignar, actualizar o desasignar cursos a un profesor.
        allow write: if isManager();
      }
    }
  }
}
